<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vista de Usuario</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4 max-w-7xl">
        <!-- Panel Principal con fondo de imagen -->
        <div class="relative min-h-[500px] mb-6">
            <!-- Capa de fondo con imagen -->
            <div class="absolute inset-0 z-0">
                <img src="{{ asset('assets/images/view-young-person-rock-climbing-practicing-bouldering-training.jpg') }}"
                     alt="Fondo de montaña" 
                     class="w-full h-full object-cover rounded-lg">
                <!-- Overlay semi-transparente -->
                <div class="absolute inset-0 bg-white/10 backdrop-blur-sm rounded-lg"></div>
            </div>

            <!-- Contenido del panel -->
            <div class="relative z-10 bg-transparent p-6 md:p-8 lg:p-10 min-h-[500px] rounded-lg">
                <div class="flex flex-col md:flex-row justify-between items-start gap-6">
                    <!-- Columna izquierda - Buscador -->
                    <div class="w-full md:w-2/3">
                        <div class="relative mb-6">
                            <input type="text" 
                                   placeholder="BUSCADOR VIAS" 
                                   class="w-full p-4 bg-white/70 backdrop-blur-sm border border-gray-300 rounded-lg 
                                          focus:ring-2 focus:ring-green-200 focus:border-green-400 outline-none
                                          shadow-lg transition-all duration-300
                                          placeholder-gray-500">
                            <div class="absolute right-4 top-1/2 transform -translate-y-1/2">
                                <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </div>
                        </div>
                    </div>

                    <!-- Columna derecha - Avatar Dropdown -->
                    <div class="w-full md:w-1/3 flex justify-end">
                        <div class="relative">
                            <button id="avatarButton" 
                                    class="flex items-center space-x-3 focus:outline-none" 
                                    aria-expanded="false"
                                    aria-haspopup="true">
                                <img src="https://media.lordicon.com/icons/wired/flat/269-avatar-female.svg" 
                                     alt="Avatar de usuario" 
                                     class="rounded-full w-12 h-12 border-2 border-green-100 hover:border-green-200">
                                <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </button>

                            <!-- Menú Dropdown -->
                            <div id="avatarDropdown" 
                                 class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-1 hidden z-50"
                                 role="menu">
                                <a href="#" 
                                   class="block px-4 py-2 text-sm text-gray-700 hover:bg-green-50 hover:text-green-800"
                                   role="menuitem">
                                    <div class="flex items-center space-x-2">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                        <span>Configuración</span>
                                    </div>
                                </a>
                                <a href="#" 
                                   class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50 hover:text-red-800"
                                   role="menuitem">
                                    <div class="flex items-center space-x-2">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                  d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                        </svg>
                                        <span>Salir del sistema</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navegación -->
        <div class="bg-white rounded-lg shadow-lg p-4 mb-6">
            <nav class="flex space-x-4">
                <button class="px-4 py-2 text-green-800 hover:bg-green-50 rounded-lg font-medium transition-colors">
                    Ascensos
                </button>
                <button class="px-4 py-2 text-green-800 hover:bg-green-50 rounded-lg font-medium transition-colors">
                    Configuración
                </button>
            </nav>
        </div>

        <!-- Tabla de Ascensos -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <h2 class="text-xl font-semibold p-4 bg-green-50 text-green-800">Listado ascensos</h2>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-green-50">
                            <th class="px-6 py-3 text-left text-gray-700">ID</th>
                            <th class="px-6 py-3 text-left text-gray-700">Ascenso</th>
                            <th class="px-6 py-3 text-right text-gray-700">Editar</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">1</td>
                            <td class="px-6 py-4">Ascenso Ejemplo 1</td>
                            <td class="px-6 py-4 text-right">
                                <button class="text-green-600 hover:text-green-800 transition-colors">
                                    Editar
                                </button>
                            </td>
                        </tr>
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">2</td>
                            <td class="px-6 py-4">Ascenso Ejemplo 2</td>
                            <td class="px-6 py-4 text-right">
                                <button class="text-green-600 hover:text-green-800 transition-colors">
                                    Editar
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Dropdown functionality
        const avatarButton = document.getElementById('avatarButton');
        const avatarDropdown = document.getElementById('avatarDropdown');

        function toggleDropdown() {
            const isExpanded = avatarButton.getAttribute('aria-expanded') === 'true';
            avatarButton.setAttribute('aria-expanded', !isExpanded);
            avatarDropdown.classList.toggle('hidden');
        }

        avatarButton.addEventListener('click', (e) => {
            e.stopPropagation();
            toggleDropdown();
        });

        document.addEventListener('click', (e) => {
            if (!avatarButton.contains(e.target)) {
                avatarButton.setAttribute('aria-expanded', 'false');
                avatarDropdown.classList.add('hidden');
            }
        });

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                avatarButton.setAttribute('aria-expanded', 'false');
                avatarDropdown.classList.add('hidden');
            }
        });

        // Búsqueda
        document.querySelector('input[type="text"]').addEventListener('input', function(e) {
            console.log('Buscando:', e.target.value);
        });
    </script>
</body>
</html>
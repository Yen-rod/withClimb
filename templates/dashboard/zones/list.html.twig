<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zonas de Escalada - WithClimb</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">

    <link href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>

    <style>
        #zonasTable {
            width: 100%;
            background: white;
            border-collapse: collapse;
            margin: 1rem 0;
        }

        #zonasTable th, #zonasTable td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #e5e7eb;
        }

        #zonasTable thead th {
            background: #f3f4f6;
            font-weight: 600;
            color: #374151;
        }

        #zonasTable tbody tr:hover {
            background-color: #f9fafb;
        }

        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter {
            margin: 1rem 0;
        }

        .dataTables_wrapper .dataTables_length select,
        .dataTables_wrapper .dataTables_filter input {
            padding: 0.5rem;
            border: 1px solid #d1d5db;
            border-radius: 0.375rem;
        }
    </style>
</head>
<body class="bg-gray-50">
<main class="main-content mt-8">
    <div class="max-w-6xl mx-auto">
        <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold text-gray-900">Zonas de Escalada</h1>
                <a href="/zonas/create" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    <i class="fas fa-plus mr-2"></i>Nueva Zona
                </a>
            </div>

            <table id="zonasTable" class="w-full">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Ubicación</th>
                    <th>Total Bloques</th>
                    <th>Total Ascensos</th>
                    <th>Acciones</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
</main>

<script>
    $(document).ready(function() {
        $('#zonasTable').DataTable({
            ajax: '/api/zones/list',
            dom: '<"flex justify-between items-center"lf>rtip',
            className: 'stripe hover',
            responsive: true,
            columns: [
                { data: 'nombre' },
                {
                    data: 'ubicacion',
                    render: function(data) {
                        const coords = data.split(',');
                        return `${coords[0].substring(0,8)}, ${coords[1].substring(0,8)}`;
                    }
                },
                {
                    data: 'bloques',
                    render: function(data) {
                        return data ? data.length : 0;
                    }
                },
                { data: 'totalAscensos' },
                {
                    data: 'id',
                    render: function(data) {
                        return `
                                <div class="flex gap-2">
                                    <a href="/zonas/${data}" class="text-blue-600 hover:text-blue-800">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/zonas/${data}/edit" class="text-yellow-600 hover:text-yellow-800">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="deleteZona(${data})" class="text-red-600 hover:text-red-800">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            `;
                    }
                }
            ],
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
            }
        });
    });

    function deleteZona(id) {
        if (confirm('¿Estás seguro de que quieres eliminar esta zona?')) {
            fetch(`/api/zones/${id}`, {
                method: 'DELETE'
            })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        $('#zonasTable').DataTable().ajax.reload();
                        toastr.success('Zona eliminada correctamente');
                    }
                });
        }
    }
</script>
</body>
</html>